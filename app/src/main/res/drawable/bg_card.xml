<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card background color -->
    <solid android:color="@color/white" />  <!-- Dark mode card background -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#2B3142" />  <!-- Slight border for card -->

    <!-- Optional shadow for pre-Lollipop (optional) -->
    <!-- You can use CardView for elevation instead -->
</shape>
